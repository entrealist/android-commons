<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="300dp" android:layout_height="wrap_content"
                                   app:cardUseCompatPadding="false"
                                   app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="300dp"
                                                       android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     style="@style/Text.Title"
                                                     android:gravity="center"
                                                     android:textStyle="bold"
                                                     android:id="@+id/title"
                                                     android:padding="16dp"
                                                     tools:text="Title"/>

        <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:id="@+id/message"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     app:layout_constraintTop_toBottomOf="@id/title"
                                                     android:paddingStart="16dp"
                                                     android:paddingBottom="16dp"
                                                     android:paddingEnd="16dp"
                                                     style="@style/Text.ListItems"
                                                     tools:text="Here goes alert description"/>

        <View android:layout_width="match_parent" android:layout_height="2dp"
              style="@style/Divider"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="@id/actions"/>

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/actions"
                                                           android:orientation="horizontal"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:layout_constraintTop_toBottomOf="@id/message"
                                                           app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView android:layout_width="0dp"
                                                         android:layout_height="wrap_content"
                                                         app:layout_constraintWidth_percent="0.5"
                                                         android:padding="16dp"
                                                         app:layout_constrainedWidth="true"
                                                         app:layout_constraintStart_toStartOf="parent"
                                                         app:layout_constraintTop_toTopOf="parent"
                                                         app:layout_constraintBottom_toBottomOf="parent"
                                                         android:id="@+id/negativeBtn"
                                                         android:gravity="center"
                                                         android:textAllCaps="true"
                                                         style="@style/Text"
                                                         tools:text="Negative"/>

            <androidx.appcompat.widget.AppCompatTextView android:layout_width="0dp"
                                                         android:layout_height="wrap_content"
                                                         app:layout_constraintWidth_percent="0.5"
                                                         android:padding="16dp"
                                                         app:layout_constrainedWidth="true"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         app:layout_constraintTop_toTopOf="parent"
                                                         app:layout_constraintBottom_toBottomOf="parent"
                                                         android:gravity="center"
                                                         android:textAllCaps="true"
                                                         android:background="?colorPrimary"
                                                         android:textColor="?colorOnPrimary"
                                                         android:id="@+id/positiveBtn"
                                                         style="@style/Text"
                                                         tools:text="Positive"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>