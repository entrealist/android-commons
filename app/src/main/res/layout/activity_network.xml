<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginTop="32dp"
                                                       android:id="@+id/networkReqSingleBtn"
                                                       android:text="Network request single"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/networkReqSingleBtn"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginTop="32dp"
                                                       android:id="@+id/networkReqSuspendBtn"
                                                       android:text="Network request suspend"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/networkReqSuspendBtn"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginTop="32dp"
                                                       android:id="@+id/networkBadReqSingleBtn"
                                                       android:text="Network Bad request single"/>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@id/networkBadReqSingleBtn"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginTop="32dp"
                                                       android:id="@+id/networkBadReqSuspendBtn"
                                                       android:text="Network bad request suspend"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/networkBadReqSuspendBtn"
              android:id="@+id/currentLocale"
              app:layout_constraintStart_toStartOf="parent"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/networkBadReqSuspendBtn"
              android:id="@+id/systemLocale"
              android:layout_marginStart="32dp"
              app:layout_constraintStart_toEndOf="@id/currentLocale"
    />
</androidx.constraintlayout.widget.ConstraintLayout>